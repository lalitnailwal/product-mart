{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-chrome",          
            "request": "launch",
            "name": "client debug",
            "url": "http://localhost:4200",
            "webRoot": "${workspaceFolder}",
            "preLaunchTask": "npm: serve"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "server debug",
            "port": 9229,
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run-script", "debug"]
        }
    ]
}